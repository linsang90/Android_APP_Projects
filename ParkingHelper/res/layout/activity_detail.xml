<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d_bg1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/campus"
        android:layout_below="@+id/campus"
        android:layout_marginTop="11dp"
        android:text="address"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address"
        android:layout_below="@+id/address"
        android:layout_marginTop="21dp"
        android:text="permit time"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/campus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/direction"
        android:layout_below="@+id/name"
        android:text="campus"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="Get Direction on Google Map"
        android:typeface="serif" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/campus"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:text="Lot"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/time"
        android:layout_alignRight="@+id/direction"
        android:layout_below="@+id/time"
        android:layout_marginTop="17dp"
        android:adjustViewBounds="true" />

</RelativeLayout>